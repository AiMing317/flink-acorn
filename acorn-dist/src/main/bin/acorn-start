#!/bin/bash

# 进入acorn项目
BASE_PATH=$(cd "$(dirname "$0")" || exit ; pwd)
cd "${BASE_PATH}" || exit

# 关闭原有进程
for metaResult in $(ps -e -o pid,command | grep acorn-server.jar)
do
    if [ "$metaResult" == java ]; then
      ACORN_PID=${PRE_VAL}
    	break
	fi
	PRE_VAL=${metaResult}
done
if [ _"${ACORN_PID}" != _ ];then
  kill -9 "${ACORN_PID}"
fi

# 创建日志文件
ACORN_LOG="${BASE_PATH}"/../log/acorn-server.log
if [ ! -f "$ACORN_LOG" ]; then
    touch "$ACORN_LOG"
fi

# 启动项目
ACORN_APP="${BASE_PATH}"/../lib/acorn-server.jar
nohup java -jar -Xmx2048m "${ACORN_APP}" --spring.config.additional-location="${BASE_PATH}"/../conf/application-acorn.yml >> "${ACORN_LOG}" 2>&1 &
tail -f ${ACORN_LOG}

